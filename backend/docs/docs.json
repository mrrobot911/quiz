{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for codemasters quiz task.",
        "title": "Quiz Example API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "basePath": "/api/v1",
    "paths": {
        "/api/v1/questions": {
            "get": {
                "description": "Returns a list of all questions that meet the condition. Accepts query parameters for the number of questions on the page, the page number, and search in question text.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "questions"
                ],
                "summary": "Return list of questions",
                "parameters": [
                    {
                        "type": "string",
                        "description": "search parameter",
                        "name": "search",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "page number",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 10,
                        "description": "number questions per page",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.QuestionsDTO"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/questions/{id}": {
            "get": {
                "description": "Returns question details based on a specific ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "questions"
                ],
                "summary": "Specific question",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Question ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.QuestionDTO"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/quiz/answer": {
            "post": {
                "description": "Submits user's answer for the current question in the session",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "Submit answer for current question",
                "parameters": [
                    {
                        "description": "Answer data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.AnswerRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.AnswerResponse"
                        }
                    }
                }
            }
        },
        "/api/v1/quiz/start": {
            "get": {
                "description": "Creates a new quiz session with 10 random questions for the user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "Start a new quiz session",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.AnswerResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.AnswerRequest": {
            "type": "object",
            "properties": {
                "answer": {
                    "type": "integer"
                },
                "time_taken": {
                    "description": "in seconds",
                    "type": "integer"
                }
            }
        },
        "models.AnswerResponse": {
            "type": "object",
            "properties": {
                "completed": {
                    "type": "boolean"
                },
                "correct": {
                    "type": "boolean"
                },
                "current_index": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                },
                "next_question": {
                    "$ref": "#/definitions/models.QuestionDTO"
                },
                "reason": {
                    "description": "\"timeout\", \"wrong_answer\", \"correct\"",
                    "type": "string"
                },
                "total_correct": {
                    "type": "integer"
                },
                "total_incorrect": {
                    "type": "integer"
                }
            }
        },
        "models.QuestionDTO": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "options": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "text": {
                    "type": "string"
                },
                "time_limit": {
                    "type": "integer"
                }
            }
        },
        "models.QuestionsDTO": {
            "type": "object",
            "properties": {
                "page": {
                    "type": "integer"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.QuestionDTO"
                    }
                },
                "total_count": {
                    "type": "integer"
                },
                "total_pages": {
                    "type": "integer"
                }
            }
        }
    }
}